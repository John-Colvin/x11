{
	"name": "x11",
	"description": "Bindings to X11 for the D programming language",
	"homepage": "https://github.com/nomad-software/x11",
	"authors": ["Walter Bright"],
	"license": "LGPL v3",
	"excludedSourceFiles": [
		"source/c/*",
	],
	"configurations": [
		{
			"name": "library",
			"targetType": "library",
			"lflags-osx": ["-L/opt/X11/lib/"],
			"libs-posix": ["X11"],
		},
		{
			"name": "application",
			"targetType": "executable",
			"lflags-osx": ["-L/opt/X11/lib/"],
			"libs-posix": ["X11"],
		},
		{
			"name": "tcltk-import",
			"excludedSourceFiles": [
				"source/x11/keysym.d",
				"source/x11/keysymdef.d",
				"source/x11/Xlib_xcb.d",
				"source/x11/XlibConf.d",
				"source/x11/Xlibint.d",
				"source/x11/Xmd.d",
				"source/x11/Xproto.d",
				"source/x11/Xprotostr.d",
				"source/x11/Xregion.d",
				"source/x11/Xresource.d",
				"source/x11/Xtos.d",
				"source/x11/Xutil.d",
				"source/x11/extensions/*",
			],
		},
	],
}
